@model Jobbsy.Models.Comment

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ 
    int companyID = (int)TempData["companyID"];
}

<h1>ADD COMMENT</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="rate" class="control-label">Rate:</label>
                <input asp-for="rate" min="1" max="5" class="form-control" />
                <span asp-validation-for="rate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="content" class="control-label">Description:</label>
                <textarea asp-for="content" maxlength="50" class="form-control"></textarea>
                <span asp-validation-for="content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" asp-route-id="@companyID" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>



